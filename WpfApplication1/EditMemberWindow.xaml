<Window x:Class="HostelManagement.EditMemberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Member" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Name" />
            <TextBox x:Name="NameTextBox" Width="300" Margin="5"/>
            <TextBlock Text="Email" />
            <TextBox x:Name="EmailTextBox" Width="300" Margin="5"/>
            <TextBlock Text="Phone" />
            <TextBox x:Name="PhoneTextBox" Width="300" Margin="5"/>
            <TextBlock Text="Address" />
            <TextBox x:Name="AddressTextBox" Width="300" Margin="5"/>
            <Button Content="Save Changes" Width="150" Margin="10" Click="SaveChanges_Click"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="HostelManagment.DailyCostPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HostelManagment"
        mc:Ignorable="d"
        Title="Daily Cost" Height="467.82" Width="303.383">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Select Member:"/>
            <ComboBox Name="MemberComboBox" Height="25" Margin="0,5" />

            <Label Content="Reason:"/>
            <TextBox Name="text_reason" Height="25" Margin="0,5"/>

            <Label Content="Amount:"/>

            <Button x:Name="button" Content="Add New" FontSize="14.667" Cursor="Hand" Background="#FFF5D8D8"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="HostelManagment.AddMemberPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HostelManagment"
        mc:Ignorable="d"
        Title="Member Add" Height="467.82" Width="303.383">
    <Grid Margin="10">
        <StackPanel Margin="0,10,0,0">
            <Label Content="Select Member:" Height="32"/>
            <TextBox x:Name="text_name" Height="25" Margin="0,5"/>

            <Label Content="Email:"/>
            <TextBox x:Name="text_email" Height="25" Margin="0,5"/>

            <Label Content="Phone:"/>
            <TextBox x:Name="text_phone" Height="25" Margin="0,5"/>

            <Label Content="Address"/>
            <TextBox x:Name="text_address" Height="25" Margin="0,5"/>
            <Button x:Name="btn_save" Content="Save" HorizontalAlignment="Right" Width="275" Click="btn_save_Click"/>
        </StackPanel>
    </Grid>
</Window>
